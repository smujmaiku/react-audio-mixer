{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"lib": [
			"ES2015",
			"dom"
		],
		"jsx": "react",
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"strict": true,
		"declaration": true,
		"outDir": "./build"
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"coverage",
		"build",
		"**/*.stories.*",
		"**/*.test.*"
	]
}
