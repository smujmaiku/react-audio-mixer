      "dom",
      "dom.iterable",
    ],
    "esModuleInterop": true,
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
  },
  "include": [
    "./src"
